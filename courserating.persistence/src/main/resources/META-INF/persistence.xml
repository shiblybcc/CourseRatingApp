<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="courseRatingPersistenceUnit" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>jdbc/courserating</jta-data-source>
		<class>courserating.persistence.entities.BasicCommentEntity</class>
		<class>courserating.persistence.entities.CommentEntity</class>
		<class>courserating.persistence.entities.CommentStatisticsEntity</class>
		<class>courserating.persistence.entities.SubCommentEntity</class>
		<class>courserating.persistence.entities.LectureEntity</class>
		<class>courserating.persistence.entities.LectureDescriptionEntity</class>
		<class>courserating.persistence.entities.LectureStatisticsEntity</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.schema-generation.create-database-schemas" value="true"/>
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform" />
			<property name="hibernate.classloading.use_current_tccl_as_parent" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
